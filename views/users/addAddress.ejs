<%- include('../userLayout/header.ejs')%>
<%- include('../userLayout/head.ejs') %>


<div class="container d-flex justify-content-center pb-5">
<form action="/addAddress" method="post">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="checkout-title">Add Address</h1><!-- End .checkout-title -->
                <div class="row">
                    <div class="col-sm-12">
                        <label>name *</label>
                        <input type="text" name="userName" class="form-control" required>
                    </div><!-- End .col-sm-6 -->

                   
                </div><!-- End .row -->

                <label>Mobile *</label>
                <input type="text" name="mobile" class="form-control" required>

                <label>altrenative Mobile *</label>
                <input type="text"  name="altrenativeMobile"  class="form-control" required>

                <label>House Name *</label>
                <input type="text" class="form-control" name="house" placeholder="House number and Street name" required>
                

                <div class="row">
                    <div class="col-sm-6">
                        <label>Town / City *</label>
                        <input type="text" name="city" class="form-control" required>
                    </div><!-- End .col-sm-6 -->

                    <div class="col-sm-6">
                        <label>State / County *</label>
                        <input type="text" name="state" class="form-control" required>
                    </div><!-- End .col-sm-6 -->
                </div><!-- End .row -->

                <div class="row">
                    <div class="col-sm-6">
                        <label>Postcode / ZIP *</label>
                        <input type="text" name="pincode" class="form-control" required>
                    </div><!-- End .col-sm-6 -->

                    <div class="col-sm-6">
                        <label>landmark *</label>
                        <input type="tel" name="landmark" class="form-control" required>
                    </div><!-- End .col-sm-6 -->
                </div><!-- End .row -->

                <div>
                    <button type="submit"  class="btn btn-primary btn-lg">submit</button>

                </div><!-- End .custom-checkbox -->

        </div><!-- End .col-lg-9 -->
    </div><!-- End .row -->
</form>
</div>


<%- include('../userLayout/footer.ejs') %>